<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Examen_Mvvm.MainPage"
             Title="Examen-Mvvm">
    <StackLayout>
        <Label Text="Producto 1" />
        <Entry Keyboard="Numeric" Text="{Binding Producto1}" />
        <Label Text="Producto 2" />
        <Entry Keyboard="Numeric" Text="{Binding Producto2}" />
        <Label Text="Producto 3" />
        <Entry Keyboard="Numeric" Text="{Binding Producto3}" />
        <Label Text="Subtotal" />
        <Label Text="{Binding Subtotal}" />
        <Label Text="Descuento" />
        <Label Text="{Binding Descuento}" />
        <Label Text="Total" />
        <Label Text="{Binding Total}" />
        <Button Command="{Binding CalcularCommand}" Text="Calcular" />
        <Button Command="{Binding LimpiarCommand}" Text="Limpiar" />
    </StackLayout>
</ContentPage>